---
//@ts-ignore lol
import { localizePath } from "astro-i18next";
import { t } from "i18next";
---

<div id="products" class="pb-4">
    <h1 class="text-3xl border-t py-12 text-center font-semibold">{t('products.title')}</h1>
    <div class="flex flex-col gap-8 sm:gap-16">
        <div class="flex flex-col-reverse items-center sm:grid grid-cols-6 gap-4">
            <div class="sm:col-span-4">
                <a href={localizePath("/chat_bot")}>
                    <img
                        class="sm:h-[250px] sm:w-full object-cover"
                        src="/images/chat-bot.gif"
                        alt="chat bot"
                    />
                </a>
            </div>
            <div class="sm:col-span-2">
                <h2 class="text-xl mb-2 font-semibold border-b pb-2 text-center">{t('products.chat_bot.title')}</h2>
                <p>{t('products.chat_bot.info')}</p>
            </div>
        </div>
        <div class="flex flex-col items-center sm:grid grid-cols-6 gap-4">
            <div class="sm:col-span-2">
                <h2 class="text-xl mb-2 font-semibold border-b pb-2 text-center">{t('products.project_management.title')}</h2>
                <p>{t('products.project_management.info')}</p>
                <p class="mt-2">{t('products.project_management.professional')}</p>
            </div>
            <div class="sm:col-span-4">
                <a href={localizePath("/project_management")}>
                    <img
                        class="sm:h-[250px] sm:w-full object-cover"
                        src="/images/live-edit.gif"
                        alt="project management"
                    />
                </a>
            </div>
        </div>
        <div class="flex flex-col-reverse items-center sm:grid grid-cols-6 gap-4">
            <div class="sm:col-span-4">
                <a target="_blank" href="https://github.com/TravyTheDev/multiplayer-game">
                    <img
                        class="sm:h-[250px] sm:w-full object-cover object-bottom"
                        src="/images/kick-him.gif"
                        alt="kick-him"
                    />
                </a>
            </div>
            <div class="sm:col-span-2">
                <h2 class="text-xl mb-2 font-semibold border-b pb-2 text-center">{t('products.kick_him.title')}</h2>
                <p>{t('products.kick_him.info')}</p>
                <p>{t('products.kick_him.site')}</p>
            </div>
        </div>
        <div class="flex flex-col items-center sm:grid grid-cols-6 gap-4">
            <div class="sm:col-span-2">
                <h2 class="text-xl mb-2 font-semibold border-b pb-2 text-center">{t('products.private_chats.title')}</h2>
                <p>{t('products.private_chats.info')}</p>
            </div>
            <div class="sm:col-span-4">
                <a target="_blank" href="http://192.168.10.4/private-chats/">
                    <img
                        class="sm:h-[250px] sm:w-full object-cover"
                        src="/images/private-chats.gif"
                        alt="private chats"
                    />
                </a>
            </div>
        </div>
    </div>
</div>
