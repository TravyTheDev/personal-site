---
import Logos from "./logos.astro";
import { t } from "i18next";
---
<div id="about" class="py-4">
    <h1 class="text-3xl text-center pb-12 pt-8 font-semibold">{t('about.about_me')}</h1>
    <div class="flex flex-col items-center sm:flex-row sm:items-start gap-4">
        <div class="max-w-[300px] whitespace-pre-line">
            <img class="mb-4" src="/images/profilePic1.png" alt="Picture of Travis">
            <div>
                <p>{t('about.love_coding')}</p>
                <p>{t('about.not_lying')}</p>
            </div>
        </div>
        <Logos />
    </div>
    <div class="pt-4 mt-4 text-xs border-t">
        <p>{t('about.hidden_chat')}</p>
        <p>{t('about.contact_me')}</p>
        <p>{t('about.navbar_info')}</p>
    </div>
</div>