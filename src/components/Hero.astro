---
import HeroText from "./HeroText.vue";
import { LanguageSelector } from "astro-i18next/components";
import i18next from "i18next";
const lang = i18next.language
const SERVER_URL = import.meta.env.SERVER_URL
---

<div id="home" class="relative h-screen w-full">
    <HeroText SERVER_URL={SERVER_URL} client:load>
        <div class="border px-2">
            {
                lang == "en" ?
                <a href="/jp">日本語</a> :
                <a href="/">英語</a>
            }
        </div>
        <!-- <LanguageSelector showFlag={false} languageMapping={{ jp: "日本語" }} class="bg-transparent text-white" /> -->
    </HeroText>
    <div class="mx-1 h-full">
        <canvas class="h-full w-full"></canvas>
    </div>
</div>

<style>
    .lang-select option{
        background-color: transparent;
        color: white;
    }
</style>